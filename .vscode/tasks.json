{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build files",
            "command": "C:\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "*.cpp",                       // compile all .cpp files in folder
                "-o",
                "${workspaceFolder}\\game.exe"  // output executable
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}