{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "C++ Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/game.exe", // Path to compiled executable
            "args": [],                             // Any command-line arguments
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",            // Working directory
            "environment": [],
            "externalConsole": true,                // Opens console window
            "MIMode": "gdb",                        // Or "lldb" on Mac
            "preLaunchTask": "Build files",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}